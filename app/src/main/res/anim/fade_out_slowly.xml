<!-- Fade-out animation that lasts the same duration as when the keyboard is shown/hidden -->
<alpha
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:interpolator/accelerate_quad"
    android:fromAlpha="1.0"
    android:toAlpha="0.0"
    android:duration="@integer/fake_keyboard_hide_duration" />
